<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="以下四个按钮通信方式依次为：apache http get,apache http post,java http get,java http post" />

    <Button
        android:id="@+id/button2"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_below="@+id/textView1"
        android:layout_toLeftOf="@+id/button5"
        android:background="@drawable/apache_post" />

    <Button
        android:id="@+id/button3"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_above="@+id/linearLayout1"
        android:layout_toLeftOf="@+id/button4"
        android:background="@drawable/http_get" />

    <Button
        android:id="@+id/button4"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignParentRight="true"
        android:background="@drawable/http_post" />

    <Button
        android:id="@+id/button5"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_above="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bitmap" />

    <Button
        android:id="@+id/button1"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:background="@drawable/apache_get" />

   <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button2"
        android:layout_marginTop="92dp" >

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />



        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </ScrollView>
    </LinearLayout>

</RelativeLayout>